---
interface Link {
  text?: string;
  href?: string;
}

export interface Props {
  links: Array<Link>;
  heading: String;
}

const { links = [], heading } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<section class="relative container mx-auto px-8 py-5" aria-label-by="aoi">
  <h2 id="aoi" class="font-bold text-xl md:text-2xl px-1 mb-2">{heading}</h2>
  <div
    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 md:items-center max-w-9xl py-6 md:py-8 gap-4"
  >
    {
      links?.length
        ? links.map(({ href, text }) => (
            <a href={base + href} class="mb-5 h-100 px-5 py-5 border">
              <h3 class="text-lg font-semibold mb-3 mt-0">{text}</h3>
            </a>
          ))
        : ""
    }
  </div>
</section>
