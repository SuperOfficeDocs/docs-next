---
import { quickAccessShortcuts } from "../data/navigation";
---

<div class="container-fluid pt-10 pb-16 mx-8 px-6 lg:px-10 lg:mx-10 xl:px-16 xl:mx-24 bg-transparentTeal">
  <h1 class="font-bold text-3xl mb-16">Quick access shortcuts</h1>
  <div class="grid grid-cols-1 gap-5  lg:grid-cols-3 xl:grid-cols-4">  {
    quickAccessShortcuts.cards.map((card) => {
      return (
        <div class="col-span-1 px-3 py-6 border border-gray-200 bg-white duration-300 ease-in-out transition-shadow hover:shadow-[0_0px_8px_rgba(0,0,0,0.70)]">
          <h2 class="font-bold text-lg mb-4">{card.title}</h2>
          <div class="flex flex-col">
            {card.subLinks.map((link) => {
              return <a class="hover:underline" href={link.link}>- {link.title}</a>;
            })}
          </div>
        </div>
      );
    })
  }
  </div>
</div>
