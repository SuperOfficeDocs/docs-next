---
import { audienceTypes } from "../data/audience";

const { audience = [] } = audienceTypes;
const { heading } = Astro.props;
---

<section class="relative container mx-auto px-8 py-5" aria-label="aoi">
  <h2 id="aoi" class="font-bold text-xl md:text-2xl px-1 mb-2">{heading}</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 max-w-9xl py-6 md:py-8 gap-4">
    {
      audience?.length
        ? audience.map(({ href, title, description, color }) => (
            <div class="flex flex-col">
              <div class="flex-1 px-5 py-5 text-left border bg-lightTealGray">
                <h3 class="text-lg font-semibold mb-3 mt-0">{title}</h3>
                <p class="break-words">{description}</p>
                <div class="uppercase mt-3 text-left">
                  <a href={href} target="_blank" class="text-superOfficeGreen">
                    Learn more
                  </a>
                </div>
              </div>
              <div class={`w-full ${color} h-[15px] mt-2`} />
            </div>
          ))
        : ""
    }
  </div>
</section>
