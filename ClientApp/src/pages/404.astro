---
import Layout from "@layouts/Base.astro";
import GradientBanner from "@components/GradientBanner.astro";
import { Image } from "astro:assets";
import hugoImg from "@assets/404_Hugo.svg";
const title = `Error 404`;
const base = import.meta.env.BASE_URL;
const liveUrl = Astro.url.toString();
---

<Layout lang="en" metadata={{ title }}>
  <section class="relative">
    <GradientBanner />
    <div class="z-10 container mx-auto px-8 pt-2 relative -mt-40 md:-mt-44">
      <Image src={hugoImg} alt="Hugo - the SuperOffice owl mascot" width={250} class="mx-auto mt-8 mb-8" />
    </div>
    <div class="container max-w-lg mx-auto pb-6">
      <div class="text-center mb-8">
        <h2 class="mb-4">
          <!-- <span class="sr-only">Error</span> -->
          <span class="text-4xl">404!</span>
        </h2>
        <p class="text-base font-normal sm:text-lg md:text-xl lg:text-2xl">
          Sorry, the page you requested was not found.
        </p>
        <p class="font-light text-base md:text-xl mt-1">{liveUrl}</p>
        <a rel="noopener noreferrer" href=`${base}` class="inline-block mt-6 px-8 py-2 bg-superOfficeGreen text-white rounded-md shadow-md hover:bg-primary-dark transition">
          Back to homepage
        </a>
      </div>
    </div>
  </section>
</Layout>
